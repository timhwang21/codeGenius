<h2>Sign Up</h2>

<form action="<%= users_url %>" method="post">
  <%= auth_token_input %>
  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>

  <br>

  <label>
    Email
    <input type="email" name="user[email]" value="">
  </label>

  <br>

  <label>
    Profile Picture
    <input type="text" name="user[image_url]" value="">
  </label>

  <br>

  <label>
    Description
    <textarea name="user[body]" value=""></textarea>
  </label>

  <br>

  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>

  <br>

  <input type="submit" value="Sign Up">
</form>
